{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReadOnlySpot",
      "Effect": "Allow",
      "Action": [
        "autoscaling:Describe*",
        "elasticmapreduce:Describe*",
        "elasticmapreduce:List*",
        "elasticloadbalancing:Describe*",
        "ecs:List*",
        "batch:Describe*",
        "ecs:Describe*",
        "elasticbeanstalk:Describe*",
        "ec2:Describe*",
        "codedeploy:BatchGetDeployments",
        "batch:List*",
        "eks:ListClusters",
        "codedeploy:List*",
        "iam:ListAccountAliases"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "SavingsPlan",
      "Action": [
        "savingsplans:Describe*",
        "savingsplans:List*"
      ],
      "Effect": "Allow",
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "Lambda",
      "Action": [
        "lambda:ListFunctions"
      ],
      "Effect": "Allow",
      "Resource": [
        "*"
      ]
    }
  ]
}
